{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": false,
    "sourceMap": true,
    "noEmit": false,
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": false,
    "pretty": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
